    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts"
    ]
}